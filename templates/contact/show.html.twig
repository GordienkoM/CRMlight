{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1 class="uk-text-center uk-padding">Contact</h1>

    <table class="uk-table">
        <tbody>
            <tr>
                <th>Prènom</th>
                <td>{{ contact.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ contact.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Phone_number</th>
                <td>{{ contact.phoneNumber }}</td>
            </tr>
            {% if is_granted("ROLE_ADMIN") %}
                <tr>
                    <th>Archivé</th>
                    <td>{{ contact.enable ? 'Oui' : 'No' }}</td>
                </tr>
            {% endif %}	
            <tr>
                <th>CreatedAt</th>
                <td>{{ contact.createdAt ? contact.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('contact_index') }}">Revenir à la liste des contacts</a>

    <a href="{{ path('contact_edit', {'id': contact.id}) }}">Editer</a>

    {{ include('contact/_delete_form.html.twig') }}
{% endblock %}
