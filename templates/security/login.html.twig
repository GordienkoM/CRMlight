{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="uk-flex uk-flex-column uk-flex-center">
    <h1 class=" uk-text-center uk-padding">Connectez-vous</h1>
    <div class="uk-container uk-container-small">
        <form class="uk-card uk-card-default uk-card-large uk-card-body" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <label for="inputEmail" class="uk-margin-large">Email</label><br>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="uk-input uk-form-width-large" autocomplete="email" required autofocus><br>
            <label for="inputPassword" class="uk-margin-large">Password</label><br>
            <input type="password" name="password" id="inputPassword" class="uk-input uk-form-width-large" autocomplete="current-password" required><br>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="uk-text-center uk-padding">
                <button class="uk-button uk-button-secondary" type="submit">Se connecter</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
