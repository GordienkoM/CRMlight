{% extends 'base.html.twig' %}

{% block title %}Contacts{% endblock %}

{% block body %}
	{# Insertion de navigation d'administration #}
	{% embed "admin/index.html.twig" %}{% endembed %}
    <h1>Carnet de contact</h1>

    <table id="usersTable"class='uk-table'>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Email de compts</th>
                <th>Email de contact</th>
                <th>Numero de téléphone</th>
                <th>Archivé</th>
                <th>La date de création</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{% if user.contact %}{{ user.contact.lastname }} {{ user.contact.firstname }}{% endif %}</td>
                <td>{{ user.email }}</td>
                <td>{% if user.contact %} {{ user.contact.email }} {% endif %}</td>
                <td>{% if user.contact %} {{ user.contact.phoneNumber }} {% endif %}</td>
                <td>{% if user.contact %} {{ user.contact.enable ? 'Yes' : 'No' }} {% endif %}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Le cornet de contact est vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contact_new') }}">Créer un contact</a>
{% endblock %}